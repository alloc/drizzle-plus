{
  "include": ["src"],
  "compilerOptions": {
    "strict": true,
    "lib": ["esnext"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": [],
    "paths": {
      "drizzle-plus": ["./src/index.ts"],
      "drizzle-plus/pg": ["./src/functions/pg/types.ts"],
      "drizzle-plus/mysql": ["./src/functions/mysql/types.ts"],
      "drizzle-plus/sqlite": ["./src/functions/sqlite/types.ts"],
      "drizzle-plus/types": ["./src/types.ts"],
      "drizzle-plus/types/*": ["./src/types/*.ts"],
      "drizzle-plus/utils": ["./src/utils.ts"]
    }
  }
}
